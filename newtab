    <!-- Button to open widget in a new tab -->
    <button class="open-widget-button" onclick="openWidgetInNewTab()">Open Job Alert Widget</button>

    <script>
        // Function to open the widget in a new browser tab
        function openWidgetInNewTab() {
            const widgetUrl = 'https://jonas-schellenberg.github.io/job-alert-widget/job-alert-widget.html'; // Update this URL to the actual hosted HTML widget
            window.open(widgetUrl, '_blank');
        }
    </script>
